{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "CoreDatabase": "Host=localhost;Port=5432;Database=smarttrader_core;Username=postgres;Password=postgres",
    "MarketDatabase": "Host=localhost;Port=5432;Database=smarttrader_market;Username=postgres;Password=postgres",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "OpenTelemetry": {
    "Otlp": {
      "Endpoint": "http://localhost:4317"
    }
  },
  "Bybit": {
    "BaseUrl": "https://api.bybit.com",
    "WsUrl": "wss://stream.bybit.com/v5/public/linear",
    "Symbols": [
      "BTCUSDT",
      "ETHUSDT"
    ],
    "Timeframes": [
      "1m",
      "5m",
      "15m"
    ],
    "Rest": {
      "TimeoutSec": 10,
      "PageSize": 1000,
      "BackfillDays": 90,
      "MaxConcurrency": 2
    },
    "Ws": {
      "ReconnectBaseMs": 500,
      "ReconnectMaxMs": 10000,
      "HeartbeatMs": 20000
    },
    "RateLimit": {
      "RequestsPerMinute": 60,
      "BurstSize": 10
    }
  },
  "Trading": {
    "Indicators": {
      "Cache": {
        "MemoryTtl": "00:15:00",
        "RedisTtl": "01:00:00",
        "KeyPrefix": "ind",
        "IndexPrefix": "ind:index"
      }
    },
    "Strategies": {
      "PluginsPath": "plugins",
      "Allowed": [
        "RSI.Basic",
        "BB.Reversal"
      ],
      "RequireSignature": false,
      "ContextHistoryBars": 500,
      "Parameters": {
        "RSI.Basic": {
          "Period": 9,
          "BuyLevel": 25,
          "SellLevel": 75,
          "TrendFilterEma": 50,
          "ConfidenceNormalization": 20,
          "CooldownBars": 3
        },
        "BB.Reversal": {
          "Period": 20,
          "StdDev": 2.0,
          "RsiPeriod": 9,
          "RsiBuy": 25,
          "RsiSell": 75,
          "AdxPeriod": 14,
          "AdxThreshold": 20,
          "ConfidenceNormalization": 20,
          "CooldownBars": 5
        }
      }
    }
  }
}
